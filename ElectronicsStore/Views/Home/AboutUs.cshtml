@{
    ViewData["Title"] = "About Us";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">About ElectronicsStore</h1>
        <p class="lead text-muted">Your trusted partner for quality electronics since 2020</p>
    </div>

    <div class="row mb-5">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-bullseye text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">Our Mission</h3>
                    <p class="text-muted">
                        To provide customers with the latest and most reliable electronic products at competitive prices,
                        ensuring satisfaction through quality service and authentic products.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-eye text-success" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">Our Vision</h3>
                    <p class="text-muted">
                        To become India's most trusted online electronics marketplace, known for genuine products,
                        excellent customer service, and innovative shopping experiences.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h2 class="mb-4">Who We Are</h2>
                    <p class="lead">
                        ElectronicsStore is a leading online retailer specializing in consumer electronics, gadgets,
                        and tech accessories. Since our inception in 2020, we have served thousands of satisfied
                        customers across India.
                    </p>
                    <p>
                        We partner with top brands like Apple, Samsung, Sony, Dell, HP, and more to bring you
                        authentic products backed by manufacturer warranties. Our team carefully curates each product
                        to ensure it meets our high standards of quality and value.
                    </p>
                    <p>
                        Whether you're looking for the latest smartphone, a powerful laptop, premium headphones, or
                        smart home devices, ElectronicsStore is your one-stop destination for all things tech.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mb-5">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-primary fw-bold">10,000+</h2>
                    <p class="text-muted mb-0">Happy Customers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-success fw-bold">500+</h2>
                    <p class="text-muted mb-0">Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-warning fw-bold">50+</h2>
                    <p class="text-muted mb-0">Brands</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-danger fw-bold">24/7</h2>
                    <p class="text-muted mb-0">Support</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card bg-primary text-white shadow">
                <div class="card-body p-5 text-center">
                    <h3 class="mb-3">Why Choose Us?</h3>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-shield-check" style="font-size: 2rem;"></i>
                            <h5 class="mt-2">100% Authentic</h5>
                            <p>All products are genuine and sourced directly from brands</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-truck" style="font-size: 2rem;"></i>
                            <h5 class="mt-2">Fast Delivery</h5>
                            <p>Quick and reliable shipping across India</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-arrow-repeat" style="font-size: 2rem;"></i>
                            <h5 class="mt-2">Easy Returns</h5>
                            <p>7-day hassle-free return policy</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>