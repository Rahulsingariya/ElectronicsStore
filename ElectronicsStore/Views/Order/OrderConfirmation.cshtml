@model ElectronicsStore.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="mb-4 success-icon">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 80px;"></i>
                    </div>
                    <h2 class="text-success mb-3">Order Placed Successfully!</h2>
                    <p class="lead">Thank you for your purchase.</p>

                    <div class="alert alert-success">
                        <h5>Order ID: #@Model.OrderId</h5>
                        <p class="mb-0">Order Date: @Model.OrderDate.ToString("dd MMM yyyy, hh:mm tt")</p>
                    </div>

                    <hr class="my-4">

                    <div class="row text-start">
                        <div class="col-md-6">
                            <h6><strong>Customer Details:</strong></h6>
                            <p class="mb-1"><strong>Name:</strong> @Model.FullName</p>
                            <p class="mb-1"><strong>Phone:</strong> @Model.PhoneNumber</p>
                        </div>
                        <div class="col-md-6">
                            <h6><strong>Shipping Address:</strong></h6>
                            <p class="mb-1">@Model.ShippingAddress</p>
                            <p class="mb-1">@Model.City, @Model.State</p>
                            <p class="mb-1">@Model.ZipCode</p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row text-start">
                        <div class="col-md-12">
                            <h6><strong>Order Summary:</strong></h6>
                            <p class="mb-1"><strong>Status:</strong> <span class="badge bg-warning">@Model.OrderStatus</span></p>
                            <p class="mb-1"><strong>Total Items:</strong> @Model.OrderItems.Count</p>
                            <p class="mb-1"><strong>Payment Method:</strong> Cash on Delivery</p>
                            <p><strong>Total Amount:</strong> <span class="text-primary fs-5">₹@Model.TotalAmount.ToString("N0")</span></p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h6 class="mb-3">Ordered Items:</h6>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Product.ProductName</td>
                                        <td>@item.Product.Category.CategoryName</td>
                                        <td>@item.Quantity</td>
                                        <td>₹@item.UnitPrice.ToString("N0")</td>
                                        <td>₹@item.TotalPrice.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="MyOrders" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-seam"></i> View My Orders
                        </a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>