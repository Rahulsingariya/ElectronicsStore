@model ElectronicsStore.Models.Cart

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <h2 class="mb-4">Shopping Cart</h2>

    @if (Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="alert alert-info">
            <h4>Your cart is empty</h4>
            <p>Add some products to your cart to see them here.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                Continue Shopping
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    var itemTotal = item.Product.Price * item.Quantity;
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="ms-3">
                                                    <h6 class="mb-0">@item.Product.ProductName</h6>
                                                    <small class="text-muted">@item.Product.Category.CategoryName</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <strong>₹@item.Product.Price.ToString("N0")</strong>
                                        </td>
                                        <td class="align-middle">
                                            <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                <div class="input-group" style="width: 130px;">
                                                    <input type="number" name="quantity" value="@item.Quantity"
                                                           min="1" max="@item.Product.StockQuantity"
                                                           class="form-control form-control-sm" />
                                                    <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                        Update
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                        <td class="align-middle">
                                            <strong class="text-primary">₹@itemTotal.ToString("N0")</strong>
                                        </td>
                                        <td class="align-middle">
                                            <form asp-action="RemoveItem" method="post" class="d-inline"
                                                  onsubmit="return confirm('Remove this item from cart?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Remove
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="mt-3">
                            <form asp-action="ClearCart" method="post" class="d-inline"
                                  onsubmit="return confirm('Clear entire cart?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i> Clear Cart
                                </button>
                            </form>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary ms-2">
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        @{
                            var subtotal = Model.CartItems.Sum(item => item.Product.Price * item.Quantity);
                            var tax = subtotal * 0.18m; // 18% GST
                            var shipping = 0m; // Free shipping
                            var total = subtotal + tax + shipping;
                        }

                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>₹@subtotal.ToString("N0")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (18% GST):</span>
                            <strong>₹@tax.ToString("N0")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Shipping:</span>
                            <strong class="text-success">FREE</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Total:</h5>
                            <h5 class="text-primary">₹@total.ToString("N0")</h5>
                        </div>

                        <div class="d-grid">
                            <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary btn-lg">
                                Proceed to Checkout
                            </a>
                        </div>

                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                <i class="bi bi-shield-check"></i> Secure Checkout
                            </small>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <h6><i class="bi bi-truck"></i> Free Shipping</h6>
                        <small class="text-muted">On all orders</small>
                        <hr>
                        <h6><i class="bi bi-arrow-return-left"></i> Easy Returns</h6>
                        <small class="text-muted">7 days return policy</small>
                        <hr>
                        <h6><i class="bi bi-shield-check"></i> Secure Payment</h6>
                        <small class="text-muted">100% secure transactions</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>