@model IEnumerable<ElectronicsStore.Models.Product>

@{
    ViewData["Title"] = "Manage Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-grid"></i> Manage Products</h2>
        <a href="/Admin/Admin/Dashboard" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow">
            <div class="card-header" style="background-color: #28a745; color: white;">
                <h5 class="mb-0"><i class="bi bi-box-seam"></i> All Products (@Model.Count())</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead style="background-color: #343a40; color: white;">
                            <tr>
                                <th style="color: white;">ID</th>
                                <th style="color: white;">Image</th>
                                <th style="color: white;">Product Name</th>
                                <th style="color: white;">Category</th>
                                <th style="color: white;">Price</th>
                                <th style="color: white;">Stock Management</th>
                                <th style="color: white;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td><strong>#@product.ProductId</strong></td>
                                    <td>
                                        <img src="@product.ImageUrl"
                                             alt="@product.ProductName"
                                             style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;"
                                             onerror="this.src='/images/placeholder.jpg'">
                                    </td>
                                    <td><strong>@product.ProductName</strong></td>
                                    <td>
                                        <span class="badge bg-primary">@product.Category.CategoryName</span>
                                    </td>
                                    <td class="fw-bold" style="color: #28a745;">₹@product.Price.ToString("N0")</td>
                                    <td>
                                        <div class="d-flex align-items-center" style="gap: 8px;">
                                            <button class="btn btn-sm btn-danger stock-btn"
                                                    onclick="updateStock(@product.ProductId, -1)"
                                                    title="Decrease Stock">
                                                <i class="bi bi-dash-lg"></i>
                                            </button>
                                            <span class="badge bg-secondary stock-value"
                                                  id="stock-@product.ProductId"
                                                  style="min-width: 50px; font-size: 16px; padding: 8px 12px;">
                                                @product.StockQuantity
                                            </span>
                                            <button class="btn btn-sm btn-success stock-btn"
                                                    onclick="updateStock(@product.ProductId, 1)"
                                                    title="Increase Stock">
                                                <i class="bi bi-plus-lg"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger") status-badge"
                                              id="status-@product.ProductId">
                                            @(product.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <p class="mt-3 text-muted">No products found.</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateStock(productId, quantity) {
            var stockElement = document.getElementById('stock-' + productId);
            var statusElement = document.getElementById('status-' + productId);

            if (!stockElement) {
                console.error('Stock element not found for product:', productId);
                return;
            }

            var currentStock = parseInt(stockElement.textContent.trim());

            // Prevent negative stock
            if (currentStock + quantity < 0) {
                showToast('danger', 'Stock cannot be negative!');
                return;
            }

            // Disable buttons during update
            var buttons = document.querySelectorAll('.stock-btn');
            buttons.forEach(btn => btn.disabled = true);

            // Create form data
            var formData = new FormData();
            formData.append('productId', productId);
            formData.append('quantity', quantity);

            // Send request
            fetch('/Admin/Admin/UpdateStock', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                // Re-enable buttons
                buttons.forEach(btn => btn.disabled = false);

                if (data.success) {
                    // Update the stock display
                    stockElement.textContent = data.newStock;

                    // Update stock badge color
                    stockElement.className = 'badge stock-value';
                    if (data.newStock > 10) {
                        stockElement.classList.add('bg-success');
                    } else if (data.newStock > 0) {
                        stockElement.classList.add('bg-warning', 'text-dark');
                    } else {
                        stockElement.classList.add('bg-danger');
                    }

                    // Update status badge
                    if (statusElement) {
                        statusElement.textContent = data.newStock > 0 ? 'In Stock' : 'Out of Stock';
                        statusElement.className = 'badge status-badge';
                        statusElement.classList.add(data.newStock > 0 ? 'bg-success' : 'bg-danger');
                    }

                    // Visual feedback - flash animation
                    stockElement.style.transform = 'scale(1.3)';
                    setTimeout(function() {
                        stockElement.style.transform = 'scale(1)';
                    }, 200);

                    // Show success toast
                    showToast('success', data.message);
                } else {
                    showToast('danger', 'Error: ' + (data.message || 'Failed to update stock'));
                }
            })
            .catch(error => {
                // Re-enable buttons
                buttons.forEach(btn => btn.disabled = false);
                console.error('Error:', error);
                showToast('danger', 'Failed to update stock. Please try again.');
            });
        }

        function showToast(type, message) {
            // Remove any existing toasts
            var existingToasts = document.querySelectorAll('.custom-toast');
            existingToasts.forEach(t => t.remove());

            var bgColor = type === 'success' ? 'bg-success' : 'bg-danger';
            var icon = type === 'success' ? 'bi-check-circle-fill' : 'bi-exclamation-triangle-fill';

            var toastHtml = `
                <div class="toast custom-toast align-items-center text-white ${bgColor} border-0" role="alert"
                     style="position: fixed; top: 80px; right: 20px; z-index: 9999; min-width: 300px;">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi ${icon} me-2"></i>${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;

            document.body.insertAdjacentHTML('beforeend', toastHtml);
            var toastElement = document.body.lastElementChild;
            var toast = new bootstrap.Toast(toastElement, { delay: 3000 });
            toast.show();

            toastElement.addEventListener('hidden.bs.toast', function() {
                toastElement.remove();
            });
        }
    </script>

    <style>
        .stock-btn {
            width: 36px;
            height: 36px;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 4px;
            font-weight: bold;
            border: none;
        }

            .stock-btn:hover {
                transform: scale(1.1);
            }

            .stock-btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .stock-value {
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .status-badge {
            font-size: 12px;
            padding: 6px 12px;
            text-transform: uppercase;
            font-weight: 600;
        }

        .table thead th {
            padding: 12px;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 13px;
            letter-spacing: 0.5px;
        }

        .table tbody td {
            padding: 12px;
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }
    </style>
}